frontend k8s-api
  bind {{ ansible_default_ipv4.address }}:8443
  bind {{ keepalived_vip }}:8443
  bind 127.0.0.1:8443
  mode tcp
  option tcplog
  default_backend k8s-api

backend k8s-api
  mode tcp
  option tcplog
  option tcp-check
  balance roundrobin
  default-server inter 10s downinter 5s rise 2 fall 2 slowstart 60s maxconn 250 maxqueue 256 weight 100

  {% for host in groups['k8s'] %}
  server {{ hostvars[host].inventory_hostname }} {{ hostvars[host].ansible_default_ipv4.address }}:6443 check
  {% endfor %}
