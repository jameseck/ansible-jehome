{% for netw,netwv in static_hosts.items() %}
{% for fqdn,value in netwv.items() %}
delete service dhcp-server shared-network-name {{ netw }} subnet {{ edgerouter_networks[netw].subnet }} static-mapping {{ fqdn }}
set service dhcp-server shared-network-name {{ netw }} subnet {{ edgerouter_networks[netw].subnet }} static-mapping {{ fqdn }} ip-address {{ value.ip }}
set service dhcp-server shared-network-name {{ netw }} subnet {{ edgerouter_networks[netw].subnet }} static-mapping {{ fqdn }} mac-address {{ value.mac | lower }}
delete system static-host-mapping host-name {{ fqdn }}
set system static-host-mapping host-name {{ fqdn }} inet {{ value.ip }}
{% endfor %}
{% endfor %}
